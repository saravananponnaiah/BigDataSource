        var mp:Map[String,Int] = Map()
    mp += ("Key1"->1)
    mp += ("Key2"->2)
    mp += ("Key3"->3)
    
    println("The keys in map are : " + mp.keys)
    println("The values in map are : " + mp.values)
    println("The value in map key Key2 is : " + mp("Key2"))
    
